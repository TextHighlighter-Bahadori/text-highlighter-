{
  "Routes": [
    {
      "UpstreamPathTemplate": "/api/clojure/Highlight",
      "DownstreamPathTemplate": "/api/clojure/Highlight",
      "DownstreamHostAndPorts": [
        {
          "Host": "clojure-highlighter",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": ["Post","Options"],
      "UpstreamScheme": "http"
    },

    {
      "UpstreamPathTemplate": "/api/fortran/Highlight",
      "DownstreamPathTemplate": "/api/fortran/Highlight",
      "DownstreamHostAndPorts": [
        {
          "Host": "fortran-highlighter",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": ["Post","Options"],
      "UpstreamScheme": "http"
    },
    {
      "UpstreamPathTemplate": "/api/csharp/Highlight",
      "DownstreamPathTemplate": "/api/csharp/Highlight",
      "DownstreamHostAndPorts": [
        {
          "Host": "csharp-highlighter",
          "Port": 8080
        }
      ],
      "UpstreamHttpMethod": ["Post","Options"],
      "UpstreamScheme": "http"
    }
  ],
  
  
  "DynamicRoutes": [
    {
      "RateLimitOptions": {
        "Limit": 5,
        "Period": "1m",
        "HttpStatusCode": 429,
        "EnableRateLimiting": true,
        "PeriodTimespan": 30
      }
    }
  ],
  
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:8080"
  }
}